generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  username          String   @unique
  password          String
  role              Role
  createdAt         DateTime @default(now())
  email             String?  @unique
  firstName         String?
  lastName          String?
  encryptedPassword String?
}

enum Role {
  ADMIN
  SALESPERSON
}
